<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

<% @comment = @article.comments.build %>
<%= form_for ([@article, @comment]) do |f| %>
	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br/>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %><br/>
	</p>

<% end %>