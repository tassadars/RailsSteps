<h2>Article</h2>
<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
	<hr />
	<h4>
		<%= comment.author %> <%= comment.created_at %>
	</h4>

	<p>
		<%= comment.body %>
	</p>
<% end %>
<hr />

<h2>Add comment</h2>
<% @comment = @article.comments.build %>
<%= form_for ([@article, @comment]) do |f| %>
	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br/>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %><br/>
	</p>

<% end %>