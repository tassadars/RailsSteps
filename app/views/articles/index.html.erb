<h1>List of articles:</h1>

<% @articles.each do |article| %>
	<h2>
		<%= article.title %>
	</h2>

	<p>
		<%= article.text %>
	</p>

	<p>
		<!-- <a href="/articles/<%= article.id %>">Show</a> -->
		<%= link_to 'Show', article_path(article) %> |
		<%= link_to 'Edit', edit_article_path(article) %>
	</p>

	<hr />
<% end %>