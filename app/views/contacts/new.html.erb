<h1>Contact us</h1>
<% #possible to use variable article_path instead %>
<%= form_for :contact, url: contacts_path do |f| %>
	<p>
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :message %><br/>
		<%= f.text_area :message %>
	</p>

	<p>
		<%= f.submit 'Send message' %><br/>
	</p>


<% end %>